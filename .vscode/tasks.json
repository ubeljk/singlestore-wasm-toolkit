{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "group": "build",
      "label": "build: debugger",
      "command": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "group": "build",
      "label": "build: rust wasm modules",
      "command": "build",
      "args": [
        "--target=wasm32-unknown-unknown",
        "--workspace",
        "--exclude",
        "debugger"
      ],
      "problemMatcher": ["$rustc"]
    },
    {
      "group": "build",
      "label": "build: all",
      "dependsOn": ["build: debugger", "build: rust wasm modules"]
    }
  ]
}
